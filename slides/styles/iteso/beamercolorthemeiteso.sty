\mode<presentation>

% Definitios
\definecolor{itesoprofundo}{RGB}{000, 066, 112}
\definecolor{itesomedio}{RGB}{112, 144, 183}
\definecolor{itesoclaro}{RGB}{151, 227, 255}

\setbeamercolor{structure}{fg=itesoprofundo}

\setbeamercolor{palette primary}{fg=itesoprofundo,bg=itesoclaro}
\setbeamercolor{palette secondary}{bg=itesomedio}
\setbeamercolor{palette tertiary}{bg=itesoprofundo}
\setbeamercolor{palette quaternary}{fg=itesoprofundo,bg=gray!5!white}

\setbeamercolor{frametitle}{fg=white}

\setbeamercolor{block title}{fg=white,bg=itesomedio}
\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!25!bg}

